{
  "name": "news-scraper",
  "version": "1.0.0",
  "description": "This app scrapes and cross references daily news from memeorandum.com and mediabiasfactcheck.com and displays it to the user.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev-setup:main": "npm install",
    "dev-setup:frontend": "npm --prefix ./apps/frontend install",
    "dev-setup:backend": "npm --prefix ./apps/backend install",
    "dev-setup:scraper": "npm --prefix ./apps/scraper install",
    "dev-setup:db-migrate": "npm --prefix ./apps/scraper run db:migrate",
    "dev-setup:all": "npm run dev-setup:main && npm run dev-setup:frontend && npm run dev-setup:backend && npm run dev-setup:scraper && npm run dev-setup:db-migrate",
    "dev-start:backend": "npm --prefix ./apps/backend run dev",
    "dev-start:frontend": "npm --prefix ./apps/frontend run start",
    "dev-watch": "concurrently \"npm run dev-start:backend\" \"npm run dev-start:frontend\"",
    "ci:main": "npm install",
    "ci:frontend": "npm --prefix ./apps/frontend ci",
    "ci:backend": "npm --prefix ./apps/backend ci",
    "ci:scraper": "npm --prefix ./apps/scraper ci",
    "ci:all": "npm run ci:main && npm run ci:frontend && npm run ci:backend && npm run ci:scraper",
    "build:frontend": "npm --prefix ./apps/frontend run build",
    "build:backend": "npm --prefix ./apps/backend run prod",
    "build:all": "npm run build:frontend && npm run build:backend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilsa/news-scraper.git"
  },
  "author": "Guilherme Sa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guilsa/news-scraper/issues"
  },
  "homepage": "https://github.com/guilsa/news-scraper#readme",
  "devDependencies": {
    "concurrently": "^7.2.2"
  }
}
